{
  "name": "@fsegurai/codemirror-themes",
  "description": "Theme packages for the CodeMirror code editor",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf --glob ./packages/*/dist ./example/dist",
    "example": "rollup -c rollup.example.config.js",
    "example:watch": "rollup -w -c rollup.example.config.js",
    "prepare:themes": "npm run -w '*' prepare"
  },
  "keywords": [
    "editor",
    "code",
    "codemirror"
  ],
  "author": {
    "name": "Fabi√°n Segura",
    "url": "https://www.fsegurai.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fsegurai/cm6-themes.git"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.5",
    "@codemirror/language": "^6.10.1",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/legacy-modes": "^6.4.0",
    "@lezer/markdown": "^1.3.0",
    "codemirror": "^6.0.1"
  },
  "devDependencies": {
    "@codemirror/buildhelper": "^1.0.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.0",
    "rollup-plugin-dev": "^2.0.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
